#!/usr/bin/env bash

build() {
    # prevent conflicting variables from affecting vconsole.conf values
    # shellcheck disable=SC2034
    local KEYMAP KEYMAP_TOGGLE FONT FONT_MAP FONT_UNIMAP XKBLAYOUT XKBMODEL XKBVARIANT XKBOPTIONS

    # subshell to avoid namespace pollution
    (
        loadkeys_opts=('-q')
        l="$LANG"
        unset LANG

        for cfg in /usr/lib/initcpio/skuf_data/{vconsole.conf,locale.conf}; do
            # shellcheck disable=SC1090
            [[ -s "$cfg" ]] && . "$cfg"
        done

        [[ -n "$LANG" ]] && LOCALE="$LANG"
        LANG="$l"

        if [[ "$LOCALE" == *[Uu][Tt][Ff]?(-)8 ]]; then
            touch "$BUILDROOT/keymap.utf8"
            loadkeys_opts+=('-u')
        fi
        if [[ "$KEYMAP" != '@kernel' ]]; then
            loadkeys "${loadkeys_opts[@]}" "${KEYMAP:-us}" -b >"$BUILDROOT/keymap.bin"
        fi
    ) && add_runscript
}

help() {
    cat <<HELPEOF
This hook loads keymap(s) specified in vconsole.conf during early userspace.
HELPEOF
}

# vim: set ft=sh ts=4 sw=4 et:
